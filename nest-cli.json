{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "watchAssets": true,
    "assets": [
      {"include": "*.env","outDir": "dist"},
      "core/mail/templates/**/*.hbs",
      "assets/**/*"
    ]
  }
}
